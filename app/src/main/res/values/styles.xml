<resources>
    <!-- 兼容主题 深色主题 activity背景默认黑色，字体默认白色-->
    <style name="AppTheme1" parent="Theme.AppCompat"/>
    <!-- 兼容主题 浅色主题 activity背景默认白色 字体默认黑色 -->
     <style name="AppTheme2" parent="Theme.AppCompat.Light"/>
    <!-- 兼容主题 深色主题 无Actionbar-->
    <style name="AppTheme3" parent="Theme.AppCompat.NoActionBar"/>
    <!-- 兼容主题 浅色主题 无Actionbar-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--主色-->
        <item name="colorPrimary">@color/title</item>
        <!--深色主色-->
        <item name="colorPrimaryDark">@color/black</item>
        !--醒目主色-->
        <item name="colorAccent">@color/blueviolet</item>
        <!--抽屉开关样式-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base"/>
      <!--  &lt;!&ndash;窗体透明&ndash;&gt;
        <item name="android:windowIsTranslucent">true</item>
        &lt;!&ndash;窗体背景&ndash;&gt;
        <item name="android:windowBackground">@android:color/transparent</item>
        &lt;!&ndash;窗体动画&ndash;&gt;
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->

   <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
       <!--窗体背景，这个背景能在第一时间显示，可以用作启动界面，但此windows不可再使用view-->
    <item name="android:background">@drawable/ironman</item>
   </style>
    <style name="MainTheme" parent="AppTheme.Base">
        <!--窗体动画-->
     <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <!--抽屉开关箭头颜色-->
    <item name="color">@android:color/white</item>
    </style>
</resources>
